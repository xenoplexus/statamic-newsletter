{
    "name": "xenoplexus/statamic-newsletter",
    "autoload": {
        "psr-4": {
            "Xenoplexus\\StatamicNewsletter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xenoplexus\\StatamicNewsletter\\Tests\\": "tests"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Xenoplexus Webstudios, LLC"
        }
    ],
    "description": "Newsletter management addon for Statamic â€” subscribe/unsubscribe, Postmark integration, queued batch sending.",
    "homepage": "https://github.com/xenoplexus/statamic-newsletter",
    "keywords": ["statamic", "newsletter", "postmark", "email"],
    "require": {
        "php": "^8.3",
        "statamic/cms": "^6.0",
        "wildbit/postmark-php": "^7.0"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Newsletter",
            "description": "Newsletter management with Postmark integration"
        },
        "laravel": {
            "providers": [
                "Xenoplexus\\StatamicNewsletter\\ServiceProvider"
